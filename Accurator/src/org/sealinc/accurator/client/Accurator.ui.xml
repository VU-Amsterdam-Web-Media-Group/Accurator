<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:d="urn:import:com.google.gwt.dom.client"
	xmlns:acc="urn:import:org.sealinc.accurator.client.component">
	<g:HTMLPanel styleName="content">
		<div id="dialog-login" class="dialog" title="Login">
			<p>
				<g:Label ui:field="lblLoginMessage"></g:Label>
			</p>

			<form>
				<fieldset>
					<label for="name">Gebruikersnaam</label>
					<input type="text" class="text ui-widget-content ui-corner-all"
						name="name" id="name" />
					<label for="password">Wachtwoord</label>
					<input type="password" name="password" id="password" value=""
						class="text ui-widget-content ui-corner-all" />
				</fieldset>
				<p>
					<g:Anchor ui:field="lnkRegister" text="Of klik om te registreren"></g:Anchor>
				</p>
			</form>
		</div>
		<div id="dialog-register" class="dialog" title="Registreer">
			<p>
				<g:Label ui:field="lblRegisterMessage"></g:Label>
			</p>
			<form>
				<fieldset>
					<label for="regname">Gebruikersnaam</label>
					<input type="text" class="text ui-widget-content ui-corner-all"
						name="name" id="regname" />
					<label for="regpassword">Wachtwoord</label>
					<input type="password" name="password" id="regpassword"
						value="" class="text ui-widget-content ui-corner-all" />
					<label for="regrealName">Volledige naam</label>
					<input type="text" class="text ui-widget-content ui-corner-all"
						name="realName" id="regrealName" />
				</fieldset>
			</form>
		</div>
		<div class="header">
			<img id="headerImage" src="/images/Accurator-header.png" alt="Accurator" />
			<div class="navbar">
				<g:Button ui:field="btnAnnotate" text="Annoteren"></g:Button>
				<g:Button ui:field="btnProfile" text="MijnProfiel"></g:Button>
			</div>
			<g:Button ui:field="btnDone" text="Klaar" styleName="done button"></g:Button>
		</div>

		<g:SimplePanel ui:field="content" styleName="mainContent"></g:SimplePanel>
		<div class="footer">
			<img src="/images/RMA.png" alt="Logo van het Rijksmuseum Amsterdam"
				class="logo" />
			<img src="/images/COMMIT.png" alt="Logo van het COMMIT project"
				class="logo" />
			<img src="/images/SEALINCMedia.png" alt="Logo van het SEALINCMedia project"
				class="logo" />
			<img src="/images/TUD.png" alt="Logo van de Technische Universiteit Delft"
				class="logo" />
			<img src="/images/VU.png" alt="Logo van de Vrije Universiteit"
				class="logo" />
			<img src="/images/CWI.png" alt="Logo van het Centrum voor Wiskunde en Informatica"
				class="logo" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
