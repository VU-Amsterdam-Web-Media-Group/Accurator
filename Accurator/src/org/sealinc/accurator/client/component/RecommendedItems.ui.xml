<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default" xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:d="urn:import:com.google.gwt.dom.client" xmlns:acc="urn:import:org.sealinc.accurator.client.component">
	<g:HTMLPanel>
		<div class="recommendation">
		<h2><ui:msg description="Personal recommendations">Your personal recommendations</ui:msg></h2>
			<div class="search">
				<g:TextBox ui:field="tbSearch" styleName="searchBox"></g:TextBox>
				<g:Button ui:field="btnSearch" text="Zoeken"></g:Button>
			</div>
			<div class="previous">
				<g:Image ui:field="imgPrevious" styleName="imageButton" altText="Previous recommendations"
					url="/images/arrowPrevious.png">
					<ui:attribute name="altText" description="Next recommendation" />
				</g:Image>
			</div>
			<div class="recommendationItem">

				<g:Image ui:field="img1" styleName="recImage imageButton"></g:Image>
				<br />
				<g:Label ui:field="lblTitle1" styleName="recTitle"></g:Label>
				<g:Label ui:field="lblPrintmaker1"><ui:msg description="Printmaker">Printmaker:</ui:msg></g:Label>
				<g:Label ui:field="lblCreator1" styleName="recCreator"></g:Label>
			</div>
			<div class="recommendationItem">
				<g:Image ui:field="img2" styleName="recImage imageButton"></g:Image>
				<br />
				<g:Label ui:field="lblTitle2" styleName="recTitle"></g:Label>
				<g:Label ui:field="lblPrintmaker2"><ui:msg description="Printmaker">Printmaker:</ui:msg></g:Label>
				<g:Label ui:field="lblCreator2" styleName="recCreator"></g:Label>
			</div>
			<div class="recommendationItem">

				<g:Image ui:field="img3" styleName="recImage imageButton"></g:Image>
				<br />
				<g:Label ui:field="lblTitle3" styleName="recTitle"></g:Label>
				<g:Label ui:field="lblPrintmaker3"><ui:msg description="Printmaker">Printmaker:</ui:msg></g:Label>
				<g:Label ui:field="lblCreator3" styleName="recCreator"></g:Label>
			</div>
			<div class="next">
				<g:Image ui:field="imgNext" styleName="imageButton" altText="Next recommendations"
					url="/images/arrowNext.png">
					<ui:attribute name="altText" description="Next recommendation" />
				</g:Image>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>